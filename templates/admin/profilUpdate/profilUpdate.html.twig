{% extends "baseAdmin.html.twig" %}


{% block body %}


<div class=" container ">
  <h2 class="pt-3 text-center"> Update Player {{ user.id }} </h2>
  <form method="post">
    <div class="form-group row pt-4 justify-content-center">
      <label class="col-sm-3 col-form-label"> <u> Actual username : </u> {{ user.username }}</label>
      <div class="col-sm-1 col-form-label text-end"> <i class="fas fa-long-arrow-alt-right"></i> </div>
      <div class="col-sm-6">
        <input type="text" class="form-control " name="username">
      </div>
    </div>
    <div class="form-group row pt-4 justify-content-center">
      <label class="col-sm-3 col-form-label"><u> Actual mail : </u> {{ user.mail }} </label>
      <div class="col-sm-1 col-form-label text-end"> <i class="fas fa-long-arrow-alt-right"></i> </div>
      <div class="col-sm-6">
        <input type="text" class="form-control " name="mail">
      </div>
    </div>
    <div class="form-group row pt-4 justify-content-center">
      <label class="col-sm-3 col-form-label"><u> Actual role: </u> {{ user.roles }} </label>
      <div class="col-sm-1 col-form-label text-end"> <i class="fas fa-long-arrow-alt-right"></i> </div>
      <div class="col-sm-6">
        <select name="roles" class="form-control">
          <option value="ROLE_ADMIN">Administrateur</option>
          <option value="ROLE_USER">Joueur</option>
        </select>
      </div>
    </div>
    <div class="form-group row pt-4 justify-content-center">
      <label class="col-sm-3 col-form-label"> <u>Actual firstname: </u> {{ user.firstName }} </label>
      <div class="col-sm-1 col-form-label text-end"> <i class="fas fa-long-arrow-alt-right"></i> </div>
      <div class="col-sm-6">
        <input type="text" class="form-control " name="firstname">
      </div>
    </div>
    <div class="form-group row pt-4 justify-content-center">
      <label class="col-sm-3 col-form-label"><u> Actual lastname: </u> {{ user.lastName }} </label>
      <div class="col-sm-1 col-form-label text-end"> <i class="fas fa-long-arrow-alt-right"></i> </div>
      <div class="col-sm-6">
        <input type="text" class="form-control " name="lastname">
      </div>
    </div>
    <div class="pt-3 text-center">
      <button class="btn btn-success"> Modifier </button>
    </div>
  </form>
</div>


{% endblock %}
