{% extends "baseGame.html.twig" %}


{% block body %}
<div class="container-fluid">
    <div class="row text-center justify-content-center h-100  loginPage">
        <div class="col-sm-4 align-self-center">
            <div class="pb-5 row justify-content-center align-items-center">
                {% block content %} <img style="width:70%" src="./images/tortle.png" />{% endblock %}
            </div>
            <p> Pas encore inscrit ? <a href="/register" class="text-white"> Enregistrez-vous ! </a> </p>
            <form method="post">
                <div class="form-group row justify-content-center align-items-center p-2 ">
                    <input type="text" class="form-control " name="username" placeholder="Username">
                </div>
                <div class="form-group row justify-content-center align-items-center p-2 ">
                    <input type="password" class="form-control " name="password" placeholder="Password">
                </div>
                <div class="row justify-content-center align-items-center p-4">
                    <button type="submit" style="background-color : #3563e1;" class="btn btn-pill"
                        name="login_submit">Log
                        In</button>
                </div>
            </form>
        </div>
    </div>
</div>
{% endblock %}